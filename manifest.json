{
	"manifest_version": 2,

	"name": "Pomodoro Tomato",
	"description": "Google Chrome Extension",
	"version": "1.0",	
	"icons": {
		"16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Tomato: Your Pomodoro Timer",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["moment.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"notifications"
	]
}